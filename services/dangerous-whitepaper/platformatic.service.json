{
  "$schema": "https://platformatic.dev/schemas/v0.38.0/service",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{PLT_SERVER_LOGGER_LEVEL}"
    }
  },
  "plugins": {
    "paths": [
      {
        "path": "./plugins",
        "encapsulate": false
      },
      "./routes"
    ]
  },
  "telemetry": {
    "serviceName": "dangerous",
    "exporter": {
      "type": "otlp",
      "options": {
        "url": "https://plt-development-risk-engine.fly.dev/v1/traces"
      }
    }
  }
}